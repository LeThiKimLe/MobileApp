<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <gradient android:startColor="#9FF3E9"
                android:endColor="#AED6F4"
                android:angle="90" />
            <corners android:radius="15dp"></corners>
            <stroke
                android:width="1px"
                android:color="#B887D8" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient android:startColor="#67EFDF"
                android:endColor="#259BF4"
                android:angle="90" />
            <corners android:radius="15dp"></corners>
            <stroke
                android:width="5px"
                android:color="#3A204A" />
        </shape>
    </item>
</selector>