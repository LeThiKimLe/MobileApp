<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#9F9898">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/ngayKiKet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tenGV"
                android:layout_alignParentEnd="false"
                android:text="Ngày ký kết: 15/5/2023" />

            <TextView
                android:id="@+id/tenGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Ngô Gia"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnViewDetailTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chuyenMon"
                android:layout_alignParentEnd="false"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btnDeleteTeacher"
                android:drawableStart="@drawable/ic_open"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="5dp"
                android:text="Xem thông tin cá nhân"
                android:textColor="#2D7A9C"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/maGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tenGV"
                android:layout_alignParentEnd="true"
                android:text="Mã GV: GV007"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ngayKiKet"
                android:layout_marginTop="10dp"
                android:text="Chuyên môn: "
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/chuyenMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView18"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/textView18"
                android:text="Toán lớp 1, Tiếng Việt lớp 2"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/btnDeleteTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btnViewDetailTeacher"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="1dp"
                android:drawableStart="@drawable/ic_delete"
                android:paddingVertical="5dp"
                android:textColor="#BC2525" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>