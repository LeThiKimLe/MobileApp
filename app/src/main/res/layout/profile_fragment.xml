<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="414dp"
        android:layout_height="163dp"
        android:background="@drawable/header_profile"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="376dp"
        android:layout_height="609dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/vien_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="356dp"
            android:layout_height="332dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:id="@+id/id_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/id_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:text="ID"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/id_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/username_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/usename_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:text="Username"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/username_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/Email_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/email_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:text="Email"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/email_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/gender_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/gender_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:text="Gender"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/gender_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/add_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/address_row"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:text="address"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/add_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/obj_row"
                android:layout_width="331dp"
                android:layout_height="13dp"
                android:layout_marginVertical="10sp"
                android:gravity="clip_horizontal">

                <TextView
                    android:id="@+id/object_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:text="Object"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/object_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image2"
            android:layout_width="107dp"
            android:layout_height="97dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:src="@android:drawable/btn_star_big_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circle"
            tools:ignore="MissingClass"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/button_goc"
            android:text="REFUSE"
            android:textColor="#F4F2F2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_goc"
            android:text="UPGRADE"
            android:textColor="#FAF7F7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/personalEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="44dp"
            android:text="HỒ SƠ CÁ NHÂN"
            android:textColor="#303F9F"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="22dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personalEmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/signInBtn"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_arrow2"
        android:contentDescription="click to login"
        android:scaleType="fitXY"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>