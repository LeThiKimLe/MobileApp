<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_15_yellowback"
    android:padding="5dp">

    <TextView
        android:id="@+id/notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/noticeImage"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/noticeImage"
        android:text="Phê duyệt yêu cầu đăng ký khóa học"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/noticeImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/thong_bao" />

    <TextView
        android:id="@+id/notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_title"
        android:layout_alignStart="@id/notice_title"
        android:layout_marginBottom="10dp"
        android:text="Học viên Ana đã gửi yêu cầu đăng ký khóa học"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView29"
        android:layout_alignStart="@id/notice_content"
        android:layout_marginBottom="5dp"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="05/05/2023"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_content"
        android:layout_alignStart="@id/notice_content"
        android:layout_marginBottom="10dp"
        android:text="@string/view_profile"
        android:textColor="#3CADDF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acceptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice_time"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/notice_time"
        android:background="@drawable/border_15_stroke"
        android:paddingHorizontal="5dp"
        android:paddingVertical="0dp"
        android:text="Chấp nhận"
        android:textColor="#508F05"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/denyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/acceptBtn"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/acceptBtn"
        android:background="@drawable/border_15_stroke"
        android:paddingHorizontal="5dp"
        android:paddingVertical="0dp"
        android:text="Từ chối"
        android:textColor="#CF0808"
        android:textSize="12sp" />
</RelativeLayout>